<Window x:Class="Catalog.Wpf.AddGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Catalog.Wpf"
        xmlns:model="clr-namespace:Catalog.Model;assembly=Catalog"
        mc:Ignorable="d"
        Title="AddGameDialog" Height="450" Width="800" d:DataContext="{model:GameCopy}">
    <StackPanel Orientation="Vertical" Grid.IsSharedSizeScope="True" Margin="5">
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Button"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0">Title</Label>
            <TextBox Grid.Column="1" Text="{Binding Title}"></TextBox>
            <Button Grid.Column="2" Padding="5,0" Margin="5,0,0,0">Search MobyGames</Button>
        </Grid>


        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Button"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0">Publisher</Label>
            <ComboBox Name="PublishersList" Grid.Column="1" DisplayMemberPath="Name" IsEditable="True" />
        </Grid>

        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Button"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0">Developers</Label>
            <ListBox Name="DevelopersCheckList" Grid.Column="1">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="model:Developer">
                        <CheckBox Content="{Binding Name}"></CheckBox>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </StackPanel>
</Window>
